<div class="container">
    <div align="center">
        <h1>Welcome {{user.displayName}}</h1>
        <a href="/github/repos">
            <div class="btn btn-google">List your Github Repos</div>
        </a>
        <div>
            <h1>Assign a role</h1>

            {{#if roles}}
                <form action="/user/roles" method="post">
                    {{#each roles}}
                        <div class="checkbox-inline">
                            <input type="checkbox" {{#if checked}}checked{{/if}} name="roles" value="{{name}}">{{name}}
                        </div>
                    {{/each}}
                    <div>
                        <button class="btn btn-google">Activate Roles</button>
                    </div>
                </form>
            {{/if}}
        </div>
    </div>
</div>