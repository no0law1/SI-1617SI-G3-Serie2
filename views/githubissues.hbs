<div class="container">
    <div align="center">
        <!--Name of the repository-->
        <h1>{{name}}</h1>
        <div>
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th>Issue</th>
                    <th>Owner</th>
                </tr>
                </thead>
                <tbody>
                {{#each issues}}
